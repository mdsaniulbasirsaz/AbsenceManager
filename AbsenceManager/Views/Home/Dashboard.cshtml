@{
    ViewData["Title"] = "Admin Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div class="d-flex" style="min-height: 100vh;">
    
    <!-- Main Content -->
    <div class="flex-grow-1 p-4 bg-light">
        <h3 class="mb-4"><i class="fas fa-tachometer-alt me-2 text-primary"></i>Dashboard Overview</h3>

        <!-- Dashboard Cards -->
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="fas fa-users fa-2x text-primary me-3"></i>
                        <div>
                            <h5 class="card-title mb-1">Total Employees</h5>
                            <h3 class="fw-bold">150</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="fas fa-calendar-check fa-2x text-success me-3"></i>
                        <div>
                            <h5 class="card-title mb-1">Approved Leaves</h5>
                            <h3 class="fw-bold">75</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <i class="fas fa-hourglass-half fa-2x text-warning me-3"></i>
                        <div>
                            <h5 class="card-title mb-1">Pending Requests</h5>
                            <h3 class="fw-bold">12</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navigation Buttons -->
        <div class="text-center mt-4">
            <button class="btn btn-primary mx-2">
                <i class="fas fa-user-plus me-1"></i> Add Employee
            </button>
            <button class="btn btn-success mx-2">
                <i class="fas fa-calendar-plus me-1"></i> Approve Leave
            </button>
            <button class="btn btn-warning mx-2">
                <i class="fas fa-chart-line me-1"></i> View Reports
            </button>
        </div>

        <!-- Recent Requests Table -->
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-clock me-2 text-info"></i>Recent Leave Requests</h5>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Employee Name</th>
                            <th>Leave Type</th>
                            <th>Status</th>
                            <th>Applied On</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>John Doe</td>
                            <td>Annual Leave</td>
                            <td><span class="badge bg-success">Approved</span></td>
                            <td>2024-01-20</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Jane Smith</td>
                            <td>Sick Leave</td>
                            <td><span class="badge bg-warning text-dark">Pending</span></td>
                            <td>2024-01-22</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Michael Brown</td>
                            <td>Parental Leave</td>
                            <td><span class="badge bg-danger">Rejected</span></td>
                            <td>2024-01-25</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
