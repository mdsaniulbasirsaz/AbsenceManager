@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-0">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h2><i class="fas fa-calendar-alt"></i> Company Leave Policy</h2>
        </div>
        <div class="card-body">

            <!-- Leave Types Section -->
            <h4 class="text-primary"><i class="fas fa-cogs"></i> Types of Leave:</h4>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><i class="fas fa-calendar-day"></i> <strong>Annual Leave:</strong> Number of days you can take off in a year (e.g., 15-20 days).</li>
                <li class="list-group-item"><i class="fas fa-heart"></i> <strong>Special Leave:</strong> Includes Passion Leave, Medical Leave, Maternity Leave, etc.</li>
                <li class="list-group-item"><i class="fas fa-globe"></i> <strong>Public Holidays:</strong> Details about public holidays and company holidays.</li>
            </ul>

            <!-- Application Deadline Section -->
            <h4 class="mt-4 text-primary"><i class="fas fa-clock"></i> Application Deadline:</h4>
            <p><i class="fas fa-info-circle"></i> Leave requests must be submitted <strong>7-15 days</strong> prior to the intended leave date.</p>

            <!-- Office Hours Section -->
            <h4 class="mt-4 text-primary"><i class="fas fa-building"></i> Office Hours and Weekly Break:</h4>
            <p><i class="fas fa-calendar-week"></i> The office operates from <strong>9:00 AM to 5:00 PM</strong> with a <strong>2-day weekend break</strong> every week.</p>

            <!-- Operational Emergency Section -->
            <h4 class="mt-4 text-primary"><i class="fas fa-exclamation-triangle"></i> Operational Emergency:</h4>
            <p><i class="fas fa-bell"></i> Leave may be canceled or rescheduled in case of urgent project deadlines or operational needs.</p>

            <!-- Special Condition Section -->
            <h4 class="mt-4 text-primary"><i class="fas fa-notes-medical"></i> Special Conditions for Leave:</h4>
            <p><i class="fas fa-file-medical"></i> If taking leave due to sickness or family emergencies, a <strong>medical certificate</strong> or other required documentation must be submitted.</p>

            <!-- Leave Approval Section -->
            <h4 class="mt-4 text-primary"><i class="fas fa-check-circle"></i> Leave Approval:</h4>
            <p><i class="fas fa-user-tie"></i> Leave applications must be approved by the <strong>Department Manager</strong> or <strong>HR</strong>.</p>

        </div>
    </div>
</div>