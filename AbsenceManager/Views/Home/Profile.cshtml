@{
    ViewData["Title"] = "Employee Profile";
}

<div class="container py-4">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Employee Profile</h2>
        <hr class="w-25 mx-auto border-2 border-primary">
    </div>

    <div class="row g-4">
        <!-- Basic Details -->
        <div class="col-12 col-md-4 text-center">
            <h5 class="fw-bold mb-0">John Doe</h5>
            <p class="text-muted mb-0">Information Technology</p>
            <p class="fw-semibold mb-0">9876543210</p>
        </div>

        <!-- Leave Application and History -->
        <div class="col-12 col-md-8">
            <!-- New Leave Request Section -->
            <div class="bg-light p-3 mb-3 rounded-3 shadow-sm">
                <h5 class="text-primary mb-3">New Leave Request</h5>
                <form asp-controller="Home" asp-action="Apply" method="get">
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Apply Now</button>
                    </div>
                </form>

            </div>

            <!-- Leave History Table -->
            <div class="bg-light p-3 rounded-3 shadow-sm">
                <h5 class="text-primary mb-3">Leave History</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-primary">
                            <tr class="text-center">
                                <th>Date Applied</th>
                                <th>Leave Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>01/01/2025</td>
                                <td>Annual Leave</td>
                                <td>05/01/2025</td>
                                <td>10/01/2025</td>
                                <td class="text-center"><span class="badge bg-success">Approved</span></td>
                            </tr>
                            <tr>
                                <td>15/12/2024</td>
                                <td>Sick Leave</td>
                                <td>18/12/2024</td>
                                <td>20/12/2024</td>
                                <td class="text-center"><span class="badge bg-warning text-dark">Pending</span></td>
                            </tr>
                            <tr>
                                <td>10/11/2024</td>
                                <td>Parental Leave</td>
                                <td>01/12/2024</td>
                                <td>15/12/2024</td>
                                <td class="text-center"><span class="badge bg-danger">Rejected</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <button class="btn btn-primary px-4">Edit Profile</button>
        <button class="btn btn-outline-danger px-4">Logout</button>
    </div>

    <!-- Footer Section -->
    <div class="text-center text-muted mt-3">
        <small>Last updated on: January 1, 2025</small>
    </div>
</div>
