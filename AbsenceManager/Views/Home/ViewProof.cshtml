@{
    ViewData["Title"] = "View Proof";
}

<div class="container mt-5">
    <h3>Leave Request Proof</h3>

    <div class="mt-3">
        @if (Model != null)
        {
            // Check the file type and display it accordingly
            if (Model.FileType.StartsWith("image"))
            {
                <img src="@Url.Action("ViewProof", "Home", new { id = Model.Id })" class="img-fluid" alt="Proof Document" />
            }
            else if (Model.FileType == "application/pdf")
            {
                <object data="@Url.Action("ViewProof", "Home", new { id = Model.Id })" type="application/pdf" width="100%" height="600px">
                    <p>Your browser does not support PDFs. <a href="@Url.Action("ViewProof", "Home", new { id = Model.Id })">Download the PDF</a>.</p>
                </object>
            }
            else
            {
                <p>Unsupported file type.</p>
            }
        }
        else
        {
            <p>No proof document available.</p>
        }
    </div>

    <div class="mt-3">
        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>
